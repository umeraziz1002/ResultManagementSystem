<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResultManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ResultManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
         <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ResultManagementSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @* <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.IsInRole("Examination"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Examination" asp-action="Dashboard">
                                    Examination Panel
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                        <a asp-controller="Marks"
                           asp-action="GenerateResult"
                           class="nav-link">
                            Generate Result
                        </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Students" asp-action="Index">
                                Students
                            </a>
                        </li>
                    </ul> *@

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Examination" asp-action="Dashboard">
                                Dashboard
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Academic Structure
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Departments" asp-action="Index">Departments</a></li>
                                <li><a class="dropdown-item" asp-controller="AcademicPrograms" asp-action="Index">Programs</a></li>
                                <li><a class="dropdown-item" asp-controller="Batches" asp-action="Index">Batches</a></li>
                                <li><a class="dropdown-item" asp-controller="Semesters" asp-action="Index">Semesters</a></li>
                                <li><a class="dropdown-item" asp-controller="Courses" asp-action="Index">Courses</a></li>
                                <li><a class="dropdown-item" asp-controller="CourseOfferings" asp-action="Index">Course Offerings</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Students
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Index">Manage Students</a></li>
                                <li><a class="dropdown-item" asp-controller="Enrollments" asp-action="Index">Enrollments</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Results
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Marks" asp-action="Index">Enter Marks</a></li>
                                <li><a class="dropdown-item" asp-controller="Marks" asp-action="GenerateResult">Generate Transcript</a></li>
                            </ul>
                        </li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav> 




    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - ResultManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
